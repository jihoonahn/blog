---
export interface Props {
  text: string;
  position?: "top" | "bottom" | "left" | "right";
  delay?: number;
}

const { text, position = "top", delay = 200 } = Astro.props;
---

<div class="tooltip-container relative group">
  <slot />
  <div
    class={`tooltip absolute z-50 px-3 py-2 text-sm text-neutral-100 bg-neutral-900 border border-neutral-700 rounded-lg shadow-lg opacity-0 invisible transition-all duration-200 pointer-events-none whitespace-nowrap ${
      position === "top"
        ? "bottom-full left-1/2 transform -translate-x-1/2 mb-3"
        : position === "bottom"
          ? "top-full left-1/2 transform -translate-x-1/2 mt-3"
          : position === "left"
            ? "right-full top-1/2 transform -translate-y-1/2 mr-3"
            : "left-full top-1/2 transform -translate-y-1/2 ml-3"
    }`}
    style={`transition-delay: ${delay}ms;`}
  >
    {text}
  </div>
</div>

<style>
  .tooltip-container:hover .tooltip {
    opacity: 1;
    visibility: visible;
  }
</style>
