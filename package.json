{
  "name": "@jihoonahn/swift-blog",
  "version": "1.0.0",
  "type": "module",
  "description": "Personal Blog built with Swift WASM and Supabase",
  "scripts": {
    "dev": "npm run frontend:dev",
    "build": "npm run ssg:build && npm run frontend:build",
    "ssg:build": "SSG_MODE=true swift run Blog",
    "frontend:dev": "vite --port 3000",
    "frontend:build": "vite build",
    "frontend:preview": "vite preview",
    "swift:wasm:dev": "swift build --triple wasm32-unknown-wasi --product Blog && cp .build/wasm32-unknown-wasi/debug/Blog.wasm Static/public/",
    "swift:wasm:build": "swift build -c release --triple wasm32-unknown-wasi --product Blog && cp .build/wasm32-unknown-wasi/release/Blog.wasm Static/dist/",
    "clean": "rm -rf .build Static/dist Static/public/*.wasm",
    "setup": "npm install && swift package resolve",
    "netlify:build": "make build",
    "netlify:dev": "make dev"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.45.4",
    "@wasmer/wasi": "^1.2.2",
    "@wasmer/wasm-transformer": "^0.12.0",
    "@wasmer/wasmfs": "^0.12.0",
    "buffer": "^6.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "tailwindcss": "^4.1.13"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "@tailwindcss/vite": "^4.1.13",
    "@types/node": "^24.5.2",
    "concurrently": "^8.2.2",
    "typescript": "^5.9.2",
    "vite": "^7.1.7"
  },
  "keywords": [
    "swift",
    "wasm",
    "blog",
    "supabase",
    "javascriptkit",
    "tailwindcss"
  ],
  "author": "Jihoon Ahn",
  "license": "MIT"
}
